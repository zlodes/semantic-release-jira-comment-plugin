{
  "name": "@zlodes/semantic-release-jira-comment-plugin",
  "version": "1.0.0",
  "description": "A semantic-release plugin that adds comments with released version to JIRA issues mentioned in commits",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "semantic-release",
    "plugin",
    "jira",
    "release",
    "comments"
  ],
  "author": "Zlatoslav Desiatnikov <px.zlodes@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zlodes/semantic-release-jira-comment-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/zlodes/semantic-release-jira-comment-plugin/issues"
  },
  "homepage": "https://github.com/zlodes/semantic-release-jira-comment-plugin#readme",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "prepare": "pnpm run build"
  },
  "peerDependencies": {
    "semantic-release": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
